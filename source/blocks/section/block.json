{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "amnesty-core/block-section",
  "title": "Section",
  "category": "amnesty-core",
  "description": "A custom block for creating sections with background options and styling.",
  "icon": "editor-table",
  "textdomain": "amnesty",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "attributes": {
    "background": {
      "type": "string",
      "default": ""
    },
    "sectionId": {
      "type": "string",
      "default": ""
    },
    "sectionName": {
      "type": "string",
      "default": ""
    },
    "backgroundImage": {
      "type": "string",
      "default": ""
    },
    "backgroundImageHeight": {
      "type": "number",
      "default": 0
    },
    "backgroundImageOrigin": {
      "type": "string",
      "default": "initial"
    },
    "enableBackgroundGradient": {
      "type": "boolean",
      "default": false
    },
    "minHeight": {
      "type": "number",
      "default": 0
    },
    "textColour": {
      "type": "string",
      "default": "black"
    },
    "backgroundImageId": {
      "type": "number",
      "default": 0
    },
    "hideImageCaption": {
      "type": "boolean",
      "default": true
    },
    "hideImageCopyright": {
      "type": "boolean",
      "default": false
    }
  }
}
