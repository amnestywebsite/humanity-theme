{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/block.json",
	"apiVersion": 2,
	"name": "amnesty-core/custom-select",
	"title": "Custom Select",
	"description": "Renders a custom <select> element implementation",
  "textdomain": "amnesty",
	"category": "amnesty-core",
	"icon": "list-view",
  "usesContext": ["query"],
	"supports": {
		"align": false,
    "className": true,
    "inserter": false
	},
  "editorScript": "file:./index.js",
  "viewScript": "file:./view.js",
  "render": "file:./render.php",
  "attributes": {
    "type": {
      "type": "string",
      "enum": ["filter", "nav"],
      "default": "filter"
    },
    "label": {
      "type": "string",
      "default": "Choose an option"
    },
    "showLabel": {
      "type": "boolean",
      "default": false
    },
    "name": {
      "type": "string",
      "default": ""
    },
    "isForm": {
      "type": "boolean",
      "default": false
    },
    "isControl": {
      "type": "boolean",
      "default": false
    },
    "isNav": {
      "type": "boolean",
      "default": false
    },
    "multiple": {
      "type": "boolean",
      "default": false
    },
    "isDisabled": {
      "type": "boolean",
      "default": false
    },
    "active": {
      "type": "string",
      "default": ""
    },
    "options": {
      "type": "object",
      "default": {
        "": "Choose an option"
      }
    }
  }
}
